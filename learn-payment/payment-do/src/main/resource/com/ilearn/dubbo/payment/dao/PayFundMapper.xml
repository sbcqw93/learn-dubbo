<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PayFundMapper">

	<resultMap id="payFundMap" type="payFundType">
		<result property="id" column="id" />
		<result property="memberId" column="member_id" />
		<result property="balance" column="balance" />
	</resultMap>

	<sql id="linkColumn">
		`id`,
		`member_id`,
		`balance`
	</sql>
	
	<insert id="insert" parameterType="java.util.Map">
		INSERT INTO `pay_fund`
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null and id != ''">
				id,
			</if>
			<if test="memberId != null and memberId != ''">
				member_id,
			</if>
			<if test="balance != null and balance != ''">
				balance,
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test="id != null and id != ''">
				#{id},
			</if>
			<if test="memberId != null and memberId != ''">
				#{memberId},
			</if>
			<if test="balance != null and balance != ''">
				#{balance},
			</if>
		</trim>
	</insert>
	
	<insert id="insertBatch">
		INSERT INTO `pay_fund`
		(
		`id`,
		`member_id`,
		`balance`
		)
		VALUES 
		<foreach item="item" index="index" collection="list" separator=",">
			(
			#{item.id},
			#{item.memberId},
			#{item.balance}
			)
		</foreach>
	</insert>

	<select id="selectOne" resultMap="payFundMap" parameterType="java.lang.String">
		SELECT <include refid="linkColumn" /> FROM `pay_fund`
		WHERE id = #{primaryKey}
		<!-- <if test="_parameter != null and _parameter != ''"></if> -->
	</select>

	<select id="select" resultMap="payFundMap" parameterType="java.util.Map">
		SELECT <include refid="linkColumn" /> FROM `pay_fund`
		<where>
		<if test="id != null and id != ''">
			AND `id` = #{id}
		</if>
		<if test="memberId != null and memberId != ''">
			AND `member_id` = #{memberId}
		</if>
		<if test="balance != null and balance != ''">
			AND `balance` = #{balance}
		</if>
		</where>
	</select>

	<select id="selectList" resultMap="payFundMap" parameterType="java.util.Map">
		SELECT <include refid="linkColumn" /> FROM `pay_fund`
		LIMIT #{position}, #{offset}
	</select>

	<select id="selectCount" resultType="java.lang.Integer" parameterType="java.util.Map">
		SELECT COUNT(1) FROM `pay_fund`
		<where>
		<if test="id != null and id != ''">
			AND `id` = #{id}
		</if>
		<if test="memberId != null and memberId != ''">
			AND `member_id` = #{memberId}
		</if>
		<if test="balance != null and balance != ''">
			AND `balance` = #{balance}
		</if>
		</where>
	</select>

	<delete id="delete" parameterType="java.lang.String">
		DELETE FROM `pay_fund` WHERE id = #{primaryKey}
	</delete>
	
	<delete id="deleteBatch">
		DELETE FROM `pay_fund`
		WHERE
		id IN
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="java.util.Map">
		UPDATE `pay_fund` 
		<set>
			<if test="memberId != null and memberId != ''">
				member_id,
			</if>
			<if test="balance != null and balance != ''">
				balance,
			</if>
		</set>
		<where>
		<if test="id != null and id != ''">
			AND `id` = #{id}
		</if>
		<if test="memberId != null and memberId != ''">
			AND `member_id` = #{memberId}
		</if>
		<if test="balance != null and balance != ''">
			AND `balance` = #{balance}
		</if>
		</where>
	</update>

</mapper>
