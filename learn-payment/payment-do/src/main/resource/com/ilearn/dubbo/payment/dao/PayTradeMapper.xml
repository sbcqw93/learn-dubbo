<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PayTradeMapper">

	<resultMap id="payTradeMap" type="payTradeType">
		<result property="id" column="id" />
		<result property="orderId" column="order_id" />
		<result property="tradeAmount" column="tradeAmount" />
		<result property="tradeStatus" column="trade_status" />
	</resultMap>

	<sql id="linkColumn">
		`id`,
		`order_id`,
		`tradeAmount`,
		`trade_status`
	</sql>
	
	<insert id="insert" parameterType="java.util.Map">
		INSERT INTO `pay_trade`
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null and id != ''">
				id,
			</if>
			<if test="orderId != null and orderId != ''">
				order_id,
			</if>
			<if test="tradeAmount != null and tradeAmount != ''">
				tradeAmount,
			</if>
			<if test="tradeStatus != null and tradeStatus != ''">
				trade_status,
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">
			<if test="id != null and id != ''">
				#{id},
			</if>
			<if test="orderId != null and orderId != ''">
				#{orderId},
			</if>
			<if test="tradeAmount != null and tradeAmount != ''">
				#{tradeAmount},
			</if>
			<if test="tradeStatus != null and tradeStatus != ''">
				#{tradeStatus},
			</if>
		</trim>
	</insert>
	
	<insert id="insertBatch">
		INSERT INTO `pay_trade`
		(
		`id`,
		`order_id`,
		`tradeAmount`,
		`trade_status`
		)
		VALUES 
		<foreach item="item" index="index" collection="list" separator=",">
			(
			#{item.id},
			#{item.orderId},
			#{item.tradeAmount},
			#{item.tradeStatus}
			)
		</foreach>
	</insert>

	<select id="selectOne" resultMap="payTradeMap" parameterType="java.lang.String">
		SELECT <include refid="linkColumn" /> FROM `pay_trade`
		WHERE id = #{primaryKey}
		<!-- <if test="_parameter != null and _parameter != ''"></if> -->
	</select>

	<select id="select" resultMap="payTradeMap" parameterType="java.util.Map">
		SELECT <include refid="linkColumn" /> FROM `pay_trade`
		<where>
		<if test="id != null and id != ''">
			AND `id` = #{id}
		</if>
		<if test="orderId != null and orderId != ''">
			AND `order_id` = #{orderId}
		</if>
		<if test="tradeAmount != null and tradeAmount != ''">
			AND `tradeAmount` = #{tradeAmount}
		</if>
		<if test="tradeStatus != null and tradeStatus != ''">
			AND `trade_status` = #{tradeStatus}
		</if>
		</where>
	</select>

	<select id="selectList" resultMap="payTradeMap" parameterType="java.util.Map">
		SELECT <include refid="linkColumn" /> FROM `pay_trade`
		LIMIT #{position}, #{offset}
	</select>

	<select id="selectCount" resultType="java.lang.Integer" parameterType="java.util.Map">
		SELECT COUNT(1) FROM `pay_trade`
		<where>
		<if test="id != null and id != ''">
			AND `id` = #{id}
		</if>
		<if test="orderId != null and orderId != ''">
			AND `order_id` = #{orderId}
		</if>
		<if test="tradeAmount != null and tradeAmount != ''">
			AND `tradeAmount` = #{tradeAmount}
		</if>
		<if test="tradeStatus != null and tradeStatus != ''">
			AND `trade_status` = #{tradeStatus}
		</if>
		</where>
	</select>

	<delete id="delete" parameterType="java.lang.String">
		DELETE FROM `pay_trade` WHERE id = #{primaryKey}
	</delete>
	
	<delete id="deleteBatch">
		DELETE FROM `pay_trade`
		WHERE
		id IN
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="java.util.Map">
		UPDATE `pay_trade` 
		<set>
			<if test="orderId != null and orderId != ''">
				order_id,
			</if>
			<if test="tradeAmount != null and tradeAmount != ''">
				tradeAmount,
			</if>
			<if test="tradeStatus != null and tradeStatus != ''">
				trade_status,
			</if>
		</set>
		<where>
		<if test="id != null and id != ''">
			AND `id` = #{id}
		</if>
		<if test="orderId != null and orderId != ''">
			AND `order_id` = #{orderId}
		</if>
		<if test="tradeAmount != null and tradeAmount != ''">
			AND `tradeAmount` = #{tradeAmount}
		</if>
		<if test="tradeStatus != null and tradeStatus != ''">
			AND `trade_status` = #{tradeStatus}
		</if>
		</where>
	</update>

</mapper>
